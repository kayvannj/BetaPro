<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="15sp" >

    <HorizontalScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fillViewport="false" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="fill_parent"
                android:layout_margin="10dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:scrollbarAlwaysDrawVerticalTrack="false" >

                <ImageView
                    android:id="@+id/doc1"
                    android:layout_width="wrap_content"
                    android:layout_height="420dp"
                    android:layout_marginBottom="10sp"
                    android:adjustViewBounds="true"
                    android:contentDescription="d1"
                    android:src="@drawable/step1" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Publish step 1/3"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="fill_parent"
                android:layout_margin="10dp"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/doc2"
                    android:layout_width="wrap_content"
                    android:layout_height="400dp"
                    android:layout_marginBottom="10sp"
                    android:adjustViewBounds="true"
                    android:contentDescription="d1"
                    android:src="@drawable/step2" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Publish step 2/3"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="fill_parent"
                android:layout_margin="10dp"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/doc3"
                    android:layout_width="wrap_content"
                    android:layout_height="400dp"
                    android:layout_marginBottom="10sp"
                    android:adjustViewBounds="true"
                    android:contentDescription="d1"
                    android:src="@drawable/step3" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Publish step 3/3"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="fill_parent"
                android:layout_margin="10dp"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/doc4"
                    android:layout_width="wrap_content"
                    android:layout_height="400dp"
                    android:layout_marginBottom="10sp"
                    android:adjustViewBounds="true"
                    android:contentDescription="d1"
                    android:src="@drawable/applist" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="List of your uploaded apps are under MYAPPS"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="fill_parent"
                android:layout_margin="10dp"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/doc5"
                    android:layout_width="wrap_content"
                    android:layout_height="400dp"
                    android:layout_marginBottom="10sp"
                    android:adjustViewBounds="true"
                    android:contentDescription="d1"
                    android:src="@drawable/childreview" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Click on it to view its reviews"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="fill_parent"
                android:layout_margin="10dp"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/doc6"
                    android:layout_width="wrap_content"
                    android:layout_height="400dp"
                    android:layout_marginBottom="10sp"
                    android:adjustViewBounds="true"
                    android:contentDescription="d1"
                    android:src="@drawable/writereview" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Write review for an app"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <Button
        android:id="@+id/helpBackBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@drawable/btn_light_green"
        android:text="back"
        android:textColor="@color/White" />

</LinearLayout>