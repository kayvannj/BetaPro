<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp" >

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:text="Step: 3 of 3"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/Green" />

    <RelativeLayout
        android:id="@+id/reviewer_count_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextView01"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="How many Reviews?"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/how_many_rev_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:inputType="number"
            android:maxEms="4"
            android:minEms="4" >

            <requestFocus />
        </EditText>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/min_pay_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reviewer_count_rl"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" >

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Minimum pay amount:"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/min_pay_et"
            android:layout_toLeftOf="@+id/min_pay_et"
            android:text="$"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/min_pay_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
           	android:inputType="numberDecimal"
            android:maxEms="4"
            android:minEms="4" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/max_pay_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/min_pay_rl"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" >

        <TextView
            android:id="@+id/TextView03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Maximum pay amount:"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/max_pay_et"
            android:layout_toLeftOf="@+id/max_pay_et"
            android:text="$"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/max_pay_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:inputType="numberDecimal"
            android:maxEms="4"
            android:minEms="4" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/agreement_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/max_pay_rl"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp" >

        <CheckBox
            android:id="@+id/agreement_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I agree to Terms and Services" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/agreement_rl" >

        <Button
            android:id="@+id/Publish"
            style="@style/SingleGradient"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="false"
            android:text="Publish" />

        <Button
            android:id="@+id/prev_bt2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            
            android:text="Previous"
           
            android:background="@drawable/btn_light_green"
            android:textColor="@color/White" />
    </RelativeLayout>

</RelativeLayout>