<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/browse_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="1"
        android:clickable="true"
        android:onClick="expandApp">

        <ImageView
            android:id="@+id/browse_app_pic"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="60dp"
            android:maxHeight="60dp"
            android:maxWidth="60dp"
            android:src="@drawable/ic_launcher" />

        <LinearLayout 
            android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:padding="10dp"
	        android:layout_weight="0.7">
	        
            <TextView
                android:id="@+id/browse_app_title"
                android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:textSize="15sp"
			    android:text="App Name:"
			    android:textColor="#0065b4"
			    android:textStyle="bold"/>
            
            <TextView
                android:id="@+id/browse_app_description"
                android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginTop="3dp"
			    android:maxLines = "2"
			    android:text="A simple drawing app"
			    android:textColor="#000000"/>
            
        </LinearLayout>
        <TextView
            android:id="@+id/browse_app_max_reward"
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="wrap_content"
            android:text="$1.00"
            android:textSize="10dp"
            android:paddingTop="20dp"
            />
        
        
    </LinearLayout>

</LinearLayout>